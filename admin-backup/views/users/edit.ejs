<%- include('../partials/header') %>

<div class="d-flex justify-content-between mb-4">
    <div>
        <a href="/users/<%= user.id %>" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> بازگشت به جزئیات کاربر
        </a>
    </div>
    <div>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteUserModal">
            <i class="bi bi-trash"></i> حذف کاربر
        </button>
    </div>
</div>

<% if (locals.success) { %>
<div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<div class="card shadow mb-4">
    <div class="card-header bg-primary text-white">
        <h6 class="m-0 font-weight-bold">ویرایش کاربر</h6>
    </div>
    <div class="card-body">
        <form action="/users/<%= user.id %>/edit" method="POST">
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="username" class="form-label">نام کاربری:</label>
                        <input type="text" class="form-control" id="username" value="<%= user.username %>" disabled>
                        <div class="form-text text-muted">نام کاربری قابل ویرایش نیست.</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="discordId" class="form-label">شناسه دیسکورد:</label>
                        <input type="text" class="form-control" id="discordId" value="<%= user.discordId %>" disabled>
                        <div class="form-text text-muted">شناسه دیسکورد قابل ویرایش نیست.</div>
                    </div>
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="wallet" class="form-label">موجودی کیف پول:</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="wallet" name="wallet" value="<%= user.wallet %>" required>
                            <span class="input-group-text">سکه</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="bank" class="form-label">موجودی بانک:</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="bank" name="bank" value="<%= user.bank %>" required>
                            <span class="input-group-text">سکه</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="crystals" class="form-label">کریستال:</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="crystals" name="crystals" value="<%= user.crystals %>" required>
                            <span class="input-group-text">کریستال</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="dailyStreak" class="form-label">استریک روزانه:</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="dailyStreak" name="dailyStreak" value="<%= user.dailyStreak %>" required>
                            <span class="input-group-text">روز</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="level" class="form-label">سطح:</label>
                        <input type="number" class="form-control" id="level" name="level" value="<%= user.level %>" required min="1">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="points" class="form-label">امتیاز:</label>
                        <input type="number" class="form-control" id="points" name="points" value="<%= user.points %>" required min="0">
                    </div>
                </div>
            </div>
            
            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                <button type="reset" class="btn btn-outline-secondary">بازنشانی</button>
                <button type="submit" class="btn btn-primary">ذخیره تغییرات</button>
            </div>
        </form>
    </div>
</div>

<!-- مدال حذف کاربر -->
<div class="modal fade" id="deleteUserModal" tabindex="-1" aria-labelledby="deleteUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteUserModalLabel">حذف کاربر</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>آیا از حذف کاربر "<strong><%= user.username %></strong>" اطمینان دارید؟</p>
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    هشدار: این عملیات غیرقابل بازگشت است و تمام اطلاعات کاربر، شامل اقلام، تراکنش‌ها و رکوردهای بازی حذف خواهند شد.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
                <form action="/users/<%= user.id %>/delete" method="POST">
                    <button type="submit" class="btn btn-danger">حذف کاربر</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>