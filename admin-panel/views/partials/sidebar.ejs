<div class="sidebar">
    <!-- هدر منو -->
    <div class="sidebar-header">
        <img src="https://api.iconify.design/cryptocurrency-color:coin.svg" alt="Ccoin Logo" class="logo">
        <h4 class="mb-0">پنل مدیریت Ccoin</h4>
        <button class="btn-sidebar-close">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>
    
    <!-- اطلاعات کاربر -->
    <div class="user-info">
        <div class="avatar">
            <div class="avatar-text">A</div>
        </div>
        <div class="info">
            <span class="fw-bold">ادمین</span>
            <small class="role d-block">مدیر سیستم</small>
        </div>
    </div>
    
    <!-- منوی اصلی -->
    <div class="sidebar-nav">
        <h6 class="nav-heading">اصلی</h6>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a href="/admin/dashboard" class="nav-link <%= currentPage === 'dashboard' ? 'active' : '' %>">
                    <i class="bi bi-speedometer2"></i>
                    <span>داشبورد</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/admin/users" class="nav-link <%= currentPage === 'users' || currentPage === 'user-details' ? 'active' : '' %>">
                    <i class="bi bi-people"></i>
                    <span>کاربران</span>
                    <span class="badge bg-primary rounded-pill ms-auto">
                        <% if (typeof usersCount !== 'undefined') { %>
                            <%= usersCount %>
                        <% } else { %>
                            0
                        <% } %>
                    </span>
                </a>
            </li>
        </ul>
        
        <h6 class="nav-heading">بازی</h6>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a href="/admin/clans" class="nav-link <%= currentPage === 'clans' ? 'active' : '' %>">
                    <i class="bi bi-flag"></i>
                    <span>کلن‌ها</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/admin/items" class="nav-link <%= currentPage === 'items' ? 'active' : '' %>">
                    <i class="bi bi-box"></i>
                    <span>آیتم‌ها</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/admin/quests" class="nav-link <%= currentPage === 'quests' ? 'active' : '' %>">
                    <i class="bi bi-journal-check"></i>
                    <span>ماموریت‌ها</span>
                </a>
            </li>
        </ul>
        
        <h6 class="nav-heading">اقتصاد</h6>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a href="/admin/transactions" class="nav-link <%= currentPage === 'transactions' ? 'active' : '' %>">
                    <i class="bi bi-arrow-left-right"></i>
                    <span>تراکنش‌ها</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/admin/stocks" class="nav-link <%= currentPage === 'stocks' ? 'active' : '' %>">
                    <i class="bi bi-graph-up"></i>
                    <span>سهام</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/admin/lottery" class="nav-link <%= currentPage === 'lottery' ? 'active' : '' %>">
                    <i class="bi bi-ticket-perforated"></i>
                    <span>لاتاری</span>
                </a>
            </li>
        </ul>
        
        <h6 class="nav-heading">سیستم</h6>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a href="/admin/logs" class="nav-link <%= currentPage === 'logs' ? 'active' : '' %>">
                    <i class="bi bi-list-ul"></i>
                    <span>لاگ‌ها</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/admin/settings" class="nav-link <%= currentPage === 'settings' ? 'active' : '' %>">
                    <i class="bi bi-gear"></i>
                    <span>تنظیمات</span>
                </a>
            </li>
        </ul>
    </div>
    
    <!-- فوتر منو -->
    <div class="sidebar-footer">
        <a href="/admin/logout" class="btn btn-logout">
            <i class="bi bi-box-arrow-right"></i> خروج از سیستم
        </a>
        <div class="version">
            نسخه ۱.۰.۰
        </div>
    </div>
</div>