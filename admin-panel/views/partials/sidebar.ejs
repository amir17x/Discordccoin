<div class="sidebar">
  <div class="sidebar-header">
    <a href="/admin/dashboard" class="sidebar-logo">
      <img src="https://i.imgur.com/K9wtXo6.png" alt="Ccoin Logo" class="logo-image">
      <span class="logo-text">پنل مدیریت</span>
    </a>
    <button class="btn sidebar-toggle" id="sidebar-toggle">
      <i class="fas fa-bars"></i>
    </button>
  </div>
  
  <div class="sidebar-user">
    <div class="user-avatar">
      <i class="fas fa-user"></i>
    </div>
    <div class="user-info">
      <h6 class="user-name"><%= user.name || user.username %></h6>
      <span class="user-role"><%= user.role === 'admin' ? 'مدیر سیستم' : 'مدیر' %></span>
    </div>
  </div>
  
  <div class="sidebar-menu">
    <ul class="menu-list">
      <li class="menu-item <%= active === 'dashboard' ? 'active' : '' %>">
        <a href="/admin/dashboard" class="menu-link">
          <i class="fas fa-tachometer-alt"></i>
          <span>داشبورد</span>
        </a>
      </li>
      
      <li class="menu-header">مدیریت</li>
      
      <li class="menu-item <%= active === 'users' ? 'active' : '' %>">
        <a href="/admin/users" class="menu-link">
          <i class="fas fa-users"></i>
          <span>کاربران</span>
        </a>
      </li>
      
      <li class="menu-item <%= active === 'clans' ? 'active' : '' %>">
        <a href="/admin/clans" class="menu-link">
          <i class="fas fa-flag"></i>
          <span>کلن‌ها</span>
        </a>
      </li>
      
      <li class="menu-item <%= active === 'items' ? 'active' : '' %>">
        <a href="/admin/items" class="menu-link">
          <i class="fas fa-box"></i>
          <span>آیتم‌ها</span>
        </a>
      </li>
      
      <li class="menu-item <%= active === 'quests' ? 'active' : '' %>">
        <a href="/admin/quests" class="menu-link">
          <i class="fas fa-tasks"></i>
          <span>ماموریت‌ها</span>
        </a>
      </li>
      
      <li class="menu-header">رویدادها</li>
      
      <li class="menu-item <%= active === 'lottery' ? 'active' : '' %>">
        <a href="/admin/lottery" class="menu-link">
          <i class="fas fa-ticket-alt"></i>
          <span>لاتاری</span>
        </a>
      </li>
      
      <li class="menu-item <%= active === 'stocks' ? 'active' : '' %>">
        <a href="/admin/stocks" class="menu-link">
          <i class="fas fa-chart-line"></i>
          <span>بازار سهام</span>
        </a>
      </li>
      
      <li class="menu-item <%= active === 'tournaments' ? 'active' : '' %>">
        <a href="/admin/tournaments" class="menu-link">
          <i class="fas fa-trophy"></i>
          <span>تورنمنت‌ها</span>
        </a>
      </li>
      
      <li class="menu-header">سیستمی</li>
      
      <li class="menu-item <%= active === 'logs' ? 'active' : '' %>">
        <a href="/admin/logs" class="menu-link">
          <i class="fas fa-history"></i>
          <span>لاگ سیستم</span>
        </a>
      </li>
      
      <li class="menu-item <%= active === 'settings' ? 'active' : '' %>">
        <a href="/admin/settings" class="menu-link">
          <i class="fas fa-cog"></i>
          <span>تنظیمات</span>
        </a>
      </li>
      
      <li class="menu-item <%= active === 'status' ? 'active' : '' %>">
        <a href="/admin/status" class="menu-link">
          <i class="fas fa-heartbeat"></i>
          <span>وضعیت ربات</span>
        </a>
      </li>
    </ul>
  </div>
  
  <div class="sidebar-footer">
    <a href="/admin/logout" class="btn btn-danger w-100">
      <i class="fas fa-sign-out-alt me-1"></i>
      خروج
    </a>
  </div>
</div>