<!DOCTYPE html>
<html lang="fa" dir="rtl" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | پنل مدیریت Ccoin</title>
    
    <!-- استایل‌های پایه -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/vazirmatn@33.0.3/Vazirmatn-font-face.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/vision-ui-utilities.css">
    <link rel="stylesheet" href="/css/vision-ui-styles.css">
    <link rel="stylesheet" href="/css/chart-fixes.css">
    
    <!-- استایل‌های ویژن UI پیشرفته -->
    <link rel="stylesheet" href="/css/theme-switcher.css">
    <link rel="stylesheet" href="/css/notification-center.css">
    <link rel="stylesheet" href="/css/micro-interactions.css">
    <link rel="stylesheet" href="/css/loading-animations.css">
    
    <!-- استایل‌های اضافی هر صفحه -->
    <% if (typeof styles !== 'undefined') { %>
        <% if (Array.isArray(styles)) { %>
            <% styles.forEach(function(style) { %>
                <link rel="stylesheet" href="<%= style %>">
            <% }); %>
        <% } else if (typeof styles === 'string') { %>
            <link rel="stylesheet" href="<%= styles %>">
        <% } %>
    <% } %>
</head>
<body class="vui-dashboard">
    <% if (typeof isLoginPage === 'undefined' || !isLoginPage) { %>
        <!-- لیوت صفحات اصلی پنل -->
        <div class="vui-layout">
            <%- include('../partials/sidebar') %>
            
            <div class="vui-content-wrapper">
                <%- include('../partials/header') %>
                
                <main class="vui-main-content">
                    <%- body %>
                </main>
                
                <footer class="vui-footer">
                    <div class="footer-brand">
                        <div class="logo-container" style="background: var(--vui-primary-gradient)">
                            <img src="/img/logo.png" alt="Ccoin" onerror="this.src='/img/coin.svg'; this.onerror=null;">
                        </div>
                        <span class="ms-2 gradient-text-primary">© ۱۴۰۲ - پنل مدیریت Ccoin | نسخه ۱.۰.۰</span>
                    </div>
                    <div class="footer-links">
                        <a href="#" class="vui-footer-link">راهنما</a>
                        <a href="#" class="vui-footer-link">تماس با ما</a>
                        <a href="#" class="vui-footer-link">قوانین</a>
                    </div>
                </footer>
            </div>
        </div>
    <% } else { %>
        <!-- صفحه ورود -->
        <%- body %>
    <% } %>
    
    <!-- لودر عمومی -->
    <div class="loader-container d-none">
        <div class="loader"></div>
    </div>
    
    <!-- اسکریپت‌های پایه -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="/js/counter-animations.js"></script>
    <script src="/js/vision-charts.js"></script>
    
    <!-- اسکریپت‌های ویژن UI پیشرفته -->
    <script src="/js/theme-switcher.js"></script>
    <script src="/js/notification-center.js"></script>
    <script src="/js/loading-animations.js"></script>
    <script src="/js/micro-interactions.js"></script>
    
    <!-- اسکریپت‌های اضافی هر صفحه -->
    <% if (typeof scripts !== 'undefined') { %>
        <% if (Array.isArray(scripts)) { %>
            <% scripts.forEach(function(script) { %>
                <script src="<%= script %>"></script>
            <% }); %>
        <% } else if (typeof scripts === 'string') { %>
            <script src="<%= scripts %>"></script>
        <% } %>
    <% } %>
    
    <!-- اسکریپت داخلی صفحه -->
    <% if (typeof inlineScript !== 'undefined') { %>
        <script>
            <%= inlineScript %>
        </script>
    <% } %>
</body>
</html>