<!DOCTYPE html>
<html lang="fa" dir="rtl" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | پنل مدیریت Ccoin</title>
    
    <!-- استایل‌های پایه -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/vazirmatn@33.0.3/Vazirmatn-font-face.css">
    
    <!-- اسکریپت‌ها با بارگذاری به‌موقع برای جلوگیری از صفحه سیاه -->
    <script type="text/javascript">
        // ایجاد متغیر برای جلوگیری از چشمک زدن اولیه
        window.visionUILoaded = false;
        
        // وقتی صفحه بارگذاری شد، کلاس آماده‌سازی را اضافه می‌کنیم
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                document.body.classList.add('vui-ready');
                window.visionUILoaded = true;
            }, 50);
        });
    </script>
    
    <!-- استایل اصلی و رفع مشکل صفحه سیاه -->
    <style>
        body {
            background-color: rgb(8, 8, 20) !important;
            opacity: 1 !important;
            visibility: visible !important;
            transition: opacity 0.3s ease;
        }
        
        body:not(.vui-ready) {
            opacity: 0.5 !important;
        }
        
        body.vui-ready {
            opacity: 1 !important;
        }
    </style>
    
    <!-- استایل‌های پایه -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/vision-ui-utilities.css">
    <link rel="stylesheet" href="/css/dashboard-fixes.css">
    <link rel="stylesheet" href="/css/vision-ui-styles.css">
    <link rel="stylesheet" href="/css/chart-fixes.css">
    
    <!-- استایل‌های ویژن UI پیشرفته -->
    <link rel="stylesheet" href="/css/theme-switcher.css">
    <link rel="stylesheet" href="/css/notification-center.css">
    <link rel="stylesheet" href="/css/micro-interactions.css">
    <link rel="stylesheet" href="/css/loading-animations.css">
    
    <!-- فایل رفع اشکالات منوهای کشویی و رنگ‌بندی -->
    <link rel="stylesheet" href="/css/dropdown-fixes.css">
    
    <!-- استایل‌های اضافی هر صفحه -->
    <% if (typeof styles !== 'undefined') { %>
        <% if (Array.isArray(styles)) { %>
            <% styles.forEach(function(style) { %>
                <link rel="stylesheet" href="<%= style %>">
            <% }); %>
        <% } else if (typeof styles === 'string') { %>
            <link rel="stylesheet" href="<%= styles %>">
        <% } %>
    <% } %>
</head>
<body class="vui-dashboard">
    <% if (typeof isLoginPage === 'undefined' || !isLoginPage) { %>
        <!-- لیوت صفحات اصلی پنل -->
        <div class="vui-layout">
            <%- include('../partials/sidebar') %>
            
            <div class="vui-content-wrapper">
                <%- include('../partials/header') %>
                
                <main class="vui-main-content">
                    <%- body %>
                </main>
                
                <footer class="vui-footer">
                    <div class="footer-brand">
                        <div class="logo-container" style="background: var(--vui-primary-gradient)">
                            <img src="/img/logo.png" alt="Ccoin" onerror="this.src='/img/coin.svg'; this.onerror=null;">
                        </div>
                        <span class="ms-2 gradient-text-primary">© ۱۴۰۲ - پنل مدیریت Ccoin | نسخه ۱.۰.۰</span>
                    </div>
                    <div class="footer-links">
                        <a href="#" class="vui-footer-link">راهنما</a>
                        <a href="#" class="vui-footer-link">تماس با ما</a>
                        <a href="#" class="vui-footer-link">قوانین</a>
                    </div>
                </footer>
            </div>
        </div>
    <% } else { %>
        <!-- صفحه ورود -->
        <%- body %>
    <% } %>
    
    <!-- لودر عمومی -->
    <div class="loader-container d-none">
        <div class="loader"></div>
    </div>
    
    <!-- اسکریپت‌های پایه -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="/js/counter-animations-simplified.js"></script>
    <script src="/js/vision-charts-simplified.js"></script>
    
    <!-- اسکریپت‌های ویژن UI پیشرفته -->
    <script src="/js/theme-switcher-simplified.js"></script>
    <script src="/js/notification-center.js"></script>
    <script src="/js/loading-animations-simplified.js"></script>
    <script src="/js/micro-interactions-simplified.js"></script>
    <script src="/js/sidebar-controller.js"></script>
    <script src="/js/dropdown-fixes.js"></script>
    <script src="/js/dashboard-simplified.js"></script>
    
    <!-- اسکریپت برای مدیریت انتقال صفحات و بهبود لودینگ -->
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // گرفتن تمام لینک‌های داخلی
        const internalLinks = document.querySelectorAll('a[href^="/admin"]');
        
        // اضافه کردن رویداد کلیک به همه لینک‌های داخلی
        internalLinks.forEach(function(link) {
            link.addEventListener('click', function(e) {
                // جلوگیری از کلیک در صورتی که لینک خارجی یا دارای target باشد
                if (link.getAttribute('target') === '_blank' || link.getAttribute('data-bypass-loader') === 'true') {
                    return;
                }
                
                // نمایش لودینگ قبل از رفتن به صفحه جدید
                const event = new Event('pageTransition');
                document.dispatchEvent(event);
                
                // تاخیر کوتاه برای اطمینان از نمایش لودینگ قبل از تغییر صفحه
                setTimeout(function() {
                    window.location.href = link.getAttribute('href');
                }, 100);
                
                e.preventDefault();
            });
        });
        
        // مدیریت منوهای ساید‌بار
        const sidebarMenuItems = document.querySelectorAll('.nav-link');
        sidebarMenuItems.forEach(function(item) {
            item.addEventListener('click', function(e) {
                if (item.getAttribute('href') === '#' || item.getAttribute('data-bs-toggle') === 'collapse') {
                    return; // اجازه دادن به منوهای کشویی برای باز شدن
                }
                
                // نمایش لودینگ برای لینک‌های واقعی
                const event = new Event('pageTransition');
                document.dispatchEvent(event);
            });
        });
    });
    
    // بهبود روند ناوبری با دکمه‌های مرورگر
    window.addEventListener('beforeunload', function() {
        // نمایش لودینگ هنگام خروج از صفحه
        const event = new Event('pageTransition');
        document.dispatchEvent(event);
    });
    </script>
    
    <!-- اسکریپت‌های اضافی هر صفحه -->
    <% if (typeof scripts !== 'undefined') { %>
        <% if (Array.isArray(scripts)) { %>
            <% scripts.forEach(function(script) { %>
                <script src="<%= script %>"></script>
            <% }); %>
        <% } else if (typeof scripts === 'string') { %>
            <script src="<%= scripts %>"></script>
        <% } %>
    <% } %>
    
    <!-- اسکریپت داخلی صفحه -->
    <% if (typeof inlineScript !== 'undefined') { %>
        <script>
            <%= inlineScript %>
        </script>
    <% } %>
</body>
</html>