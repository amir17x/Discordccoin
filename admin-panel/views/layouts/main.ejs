<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle %> | پنل مدیریت Ccoin</title>
  
  <!-- فونت‌های وازیر و فونت‌آوسم -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/vazirmatn@33.0.3/Vazirmatn-font-face.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.4.0/css/all.min.css">
  
  <!-- بوت‌استرپ و استایل‌های اصلی -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
  <link rel="stylesheet" href="/admin/css/style.css">
  
  <!-- Chart.js برای نمودارها -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.2.1/dist/chart.umd.min.js"></script>
  
  <% if (typeof extraStyles !== 'undefined' && extraStyles) { %>
    <%- extraStyles %>
  <% } %>
</head>
<body>
  <!-- پیغام‌های فلش -->
  <% if (messages && messages.success && messages.success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show message-toast" role="alert">
      <i class="fas fa-check-circle me-2"></i>
      <%= messages.success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
  
  <% if (messages && messages.error && messages.error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show message-toast" role="alert">
      <i class="fas fa-exclamation-triangle me-2"></i>
      <%= messages.error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
  
  <% if (messages && messages.info && messages.info.length > 0) { %>
    <div class="alert alert-info alert-dismissible fade show message-toast" role="alert">
      <i class="fas fa-info-circle me-2"></i>
      <%= messages.info %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
  
  <% if (messages && messages.warning && messages.warning.length > 0) { %>
    <div class="alert alert-warning alert-dismissible fade show message-toast" role="alert">
      <i class="fas fa-exclamation-circle me-2"></i>
      <%= messages.warning %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
  
  <div class="admin-layout">
    <!-- منوی کناری -->
    <%- include('../partials/sidebar') %>
    
    <div class="content-wrapper">
      <!-- هدر -->
      <%- include('../partials/header') %>
      
      <!-- محتوای اصلی -->
      <main class="main-content p-4">
        <%- body %>
      </main>
      
      <!-- فوتر -->
      <footer class="footer">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-6">
              <p class="mb-0">
                &copy; <%= new Date().getFullYear() %> <strong>Ccoin</strong>. تمام حقوق محفوظ است.
              </p>
            </div>
            <div class="col-md-6 text-md-end">
              <p class="mb-0">
                <span class="text-muted">طراحی و توسعه:</span>
                <a href="#" class="link-dark text-decoration-none">تیم Ccoin</a>
              </p>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </div>
  
  <!-- اسکریپت‌های ضروری -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/admin/js/dashboard.js"></script>
  
  <% if (typeof extraScripts !== 'undefined' && extraScripts) { %>
    <%- extraScripts %>
  <% } %>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // اسکریپت برای نمایش توست‌ها
      const toasts = document.querySelectorAll('.message-toast');
      if (toasts.length > 0) {
        toasts.forEach(toast => {
          setTimeout(() => {
            const bsToast = new bootstrap.Toast(toast, {
              autohide: true,
              delay: 5000
            });
            bsToast.show();
          }, 500);
        });
      }
      
      // تنظیم رویدادهای مربوط به منوی کناری در نسخه موبایل
      const mobileToggle = document.getElementById('mobile-toggle');
      const sidebarCloseBtn = document.querySelector('.btn-sidebar-close');
      const sidebar = document.querySelector('.sidebar');
      const contentWrapper = document.querySelector('.content-wrapper');
      
      if (mobileToggle) {
        mobileToggle.addEventListener('click', function() {
          sidebar.classList.add('show');
          contentWrapper.classList.add('blur');
          document.body.style.overflow = 'hidden';
        });
      }
      
      if (sidebarCloseBtn) {
        sidebarCloseBtn.addEventListener('click', function() {
          sidebar.classList.remove('show');
          contentWrapper.classList.remove('blur');
          document.body.style.overflow = '';
        });
      }
      
      // بستن اتوماتیک منوی کناری با کلیک بیرون از آن
      document.addEventListener('click', function(event) {
        if (sidebar && sidebar.classList.contains('show') && 
            !sidebar.contains(event.target) && 
            !mobileToggle.contains(event.target)) {
          sidebar.classList.remove('show');
          contentWrapper.classList.remove('blur');
          document.body.style.overflow = '';
        }
      });
      
      // تولتیپ‌ها
      const tooltips = document.querySelectorAll('[data-bs-toggle="tooltip"]');
      if (tooltips.length > 0) {
        tooltips.forEach(tooltip => {
          new bootstrap.Tooltip(tooltip);
        });
      }
    });
  </script>
</body>
</html>