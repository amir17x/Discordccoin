<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-5" id="dashboard-main">
    <h1 class="h3 gradient-text-primary fw-bold">داشبورد مدیریت</h1>
    <div>
        <button type="button" class="vui-btn vui-btn-primary pulse" data-bs-toggle="modal" data-bs-target="#refreshModal">
            <i class="bi bi-arrow-clockwise me-2"></i> بروزرسانی
        </button>
    </div>
</div>

<!-- کارت‌های آمار با استایل Vision UI -->
<div class="row mb-4">
    <div class="col-md-3 mb-4">
        <div class="vui-stat-card">
            <div class="stat-icon" style="background: var(--vui-primary-gradient);">
                <i class="bi bi-people"></i>
            </div>
            <div class="stat-title">کاربران</div>
            <div class="stat-value" data-value="<%= stats.totalUsers %>"><%= stats.totalUsers.toLocaleString() %></div>
            <% if (stats.newUsers > 0) { %>
            <div class="stat-sub up">
                <i class="bi bi-arrow-up-short"></i>
                <span data-value="<%= stats.newUsers %>"><%= stats.newUsers %></span> کاربر جدید
                <span class="ms-1 text-light-50">(24 ساعت گذشته)</span>
            </div>
            <% } else { %>
            <div class="stat-sub">
                <i class="bi bi-dash"></i>
                بدون کاربر جدید
                <span class="ms-1 text-light-50">(24 ساعت گذشته)</span>
            </div>
            <% } %>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="vui-stat-card">
            <div class="stat-icon" style="background: var(--vui-warning-gradient);">
                <i class="bi bi-coin"></i>
            </div>
            <div class="stat-title">مجموع Ccoin</div>
            <div class="stat-value currency" data-value="<%= stats.totalCcoin %>"><%= stats.totalCcoin.toLocaleString() %></div>
            <% if (stats.economyChange > 0) { %>
            <div class="stat-sub up">
                <i class="bi bi-arrow-up-short"></i>
                <span data-value="<%= stats.economyChange %>" class="currency"><%= stats.economyChange.toLocaleString() %></span> افزایش
                <span class="ms-1 text-light-50">(24 ساعت گذشته)</span>
            </div>
            <% } else if (stats.economyChange < 0) { %>
            <div class="stat-sub down">
                <i class="bi bi-arrow-down-short"></i>
                <span data-value="<%= Math.abs(stats.economyChange) %>" class="currency"><%= Math.abs(stats.economyChange).toLocaleString() %></span> کاهش
                <span class="ms-1 text-light-50">(24 ساعت گذشته)</span>
            </div>
            <% } else { %>
            <div class="stat-sub">
                <i class="bi bi-dash"></i>
                بدون تغییر
                <span class="ms-1 text-light-50">(24 ساعت گذشته)</span>
            </div>
            <% } %>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="vui-stat-card">
            <div class="stat-icon" style="background: var(--vui-info-gradient);">
                <i class="bi bi-building"></i>
            </div>
            <div class="stat-title">تعداد کلن‌ها</div>
            <div class="stat-value" data-value="<%= stats.totalClans %>"><%= stats.totalClans.toLocaleString() %></div>
            <% if (stats.newClans > 0) { %>
            <div class="stat-sub up">
                <i class="bi bi-arrow-up-short"></i>
                <span data-value="<%= stats.newClans %>"><%= stats.newClans %></span> کلن جدید
                <span class="ms-1 text-light-50">(24 ساعت گذشته)</span>
            </div>
            <% } else { %>
            <div class="stat-sub">
                <i class="bi bi-dash"></i>
                بدون کلن جدید
                <span class="ms-1 text-light-50">(24 ساعت گذشته)</span>
            </div>
            <% } %>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="vui-stat-card">
            <div class="stat-icon" style="background: var(--vui-success-gradient);">
                <i class="bi bi-journal-check"></i>
            </div>
            <div class="stat-title">ماموریت‌های فعال</div>
            <div class="stat-value" data-value="<%= stats.activeQuests %>"><%= stats.activeQuests.toLocaleString() %></div>
            <div class="stat-sub">
                <i class="bi bi-check2-circle"></i>
                <span data-value="<%= stats.completedQuests %>"><%= stats.completedQuests.toLocaleString() %></span> ماموریت کامل شده
                <span class="ms-1 text-light-50">(هفته گذشته)</span>
            </div>
        </div>
    </div>
</div>

<!-- نمودارها با استایل Vision UI -->
<div class="row mb-4">
    <!-- نمودار فعالیت کاربران -->
    <div class="col-md-6 mb-4">
        <div class="vui-card h-100">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h6 class="mb-0 gradient-text-primary">فعالیت کاربران</h6>
                    <p class="text-light-50 small mb-0">روند فعالیت کاربران در طول هفته</p>
                </div>
                <div class="dropdown">
                    <button class="btn-icon" type="button" id="userActivityDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-three-dots"></i>
                    </button>
                    <ul class="dropdown-menu glass-card" aria-labelledby="userActivityDropdown">
                        <li><a class="dropdown-item" href="#">امروز</a></li>
                        <li><a class="dropdown-item" href="#">7 روز گذشته</a></li>
                        <li><a class="dropdown-item" href="#">30 روز گذشته</a></li>
                    </ul>
                </div>
            </div>
            <div class="d-flex justify-content-between mb-3">
                <div class="text-light-50 small">
                    دوره زمانی: <span class="text-light">7 روز گذشته</span>
                </div>
                <div class="custom-tooltip">
                    <i class="bi bi-info-circle text-light-50"></i>
                    <span class="tooltip-text">نمودار تعداد کاربران فعال روزانه</span>
                </div>
            </div>
            <div style="height: 250px; position: relative;">
                <canvas id="userActivityChart"></canvas>
            </div>
        </div>
    </div>
    
    <!-- نمودار تراکنش‌ها -->
    <div class="col-md-6 mb-4">
        <div class="vui-card h-100">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h6 class="mb-0 gradient-text-warning">تراکنش‌های Ccoin</h6>
                    <p class="text-light-50 small mb-0">واریز و برداشت در طول هفته</p>
                </div>
                <div class="dropdown">
                    <button class="btn-icon" type="button" id="transactionsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-three-dots"></i>
                    </button>
                    <ul class="dropdown-menu glass-card" aria-labelledby="transactionsDropdown">
                        <li><a class="dropdown-item" href="#">امروز</a></li>
                        <li><a class="dropdown-item" href="#">7 روز گذشته</a></li>
                        <li><a class="dropdown-item" href="#">30 روز گذشته</a></li>
                    </ul>
                </div>
            </div>
            <div class="d-flex justify-content-between mb-3">
                <div class="text-light-50 small">
                    دوره زمانی: <span class="text-light">7 روز گذشته</span>
                </div>
                <div class="d-flex">
                    <div class="d-flex align-items-center me-3">
                        <span class="status-dot" style="background-color: rgba(1, 181, 116, 0.7)"></span>
                        <small class="ms-2 text-light-50">واریز</small>
                    </div>
                    <div class="d-flex align-items-center">
                        <span class="status-dot" style="background-color: rgba(236, 64, 122, 0.7)"></span>
                        <small class="ms-2 text-light-50">برداشت</small>
                    </div>
                </div>
            </div>
            <div style="height: 250px; position: relative;">
                <canvas id="transactionsChart"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <!-- آمار بازی‌ها با استایل Vision UI -->
    <div class="col-md-4 mb-4">
        <div class="vui-card h-100">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h6 class="mb-0 gradient-text-success">آمار بازی‌ها</h6>
                    <p class="text-light-50 small mb-0">توزیع بازی‌های انجام شده</p>
                </div>
                <div class="custom-tooltip">
                    <i class="bi bi-info-circle text-light-50"></i>
                    <span class="tooltip-text">درصد استفاده از هر بازی</span>
                </div>
            </div>
            <div style="height: 250px; position: relative;">
                <canvas id="gamesChart"></canvas>
            </div>
        </div>
    </div>
    
    <!-- کاربران فعال با استایل Vision UI -->
    <div class="col-md-4 mb-4">
        <div class="vui-card h-100">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h6 class="mb-0 gradient-text-info">کاربران فعال اخیر</h6>
                    <p class="text-light-50 small mb-0">آخرین فعالیت‌های کاربران</p>
                </div>
                <a href="/admin/users" class="btn-icon">
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>
            <div class="px-0">
                <div class="list-group list-group-flush">
                    <% recentUsers.forEach(user => { %>
                    <a href="/admin/users/<%= user.id %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center border-0 py-3">
                        <div class="d-flex align-items-center">
                            <div style="background: var(--vui-primary-gradient)" class="rounded-circle p-2 me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                <i class="bi bi-person text-light"></i>
                            </div>
                            <div>
                                <h6 class="mb-0 text-light"><%= user.username %></h6>
                                <small class="text-light-50"><%= Math.floor(user.wallet + user.bank).toLocaleString() %> Ccoin</small>
                            </div>
                        </div>
                        <div class="custom-tooltip">
                            <small class="badge-gradient badge-info px-2 py-1" style="font-size: 0.7rem">فعال</small>
                            <span class="tooltip-text">آخرین فعالیت: <%= new Date(user.lastSeen).toLocaleDateString('fa-IR') %></span>
                        </div>
                    </a>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
    
    <!-- آخرین رویدادها با استایل Vision UI -->
    <div class="col-md-4 mb-4">
        <div class="vui-card h-100">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h6 class="mb-0 gradient-text-warning">آخرین رویدادها</h6>
                    <p class="text-light-50 small mb-0">فعالیت‌های اخیر سیستم</p>
                </div>
                <a href="/admin/logs" class="btn-icon">
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>
            <div class="px-0">
                <div class="list-group list-group-flush">
                    <% recentEvents.forEach(event => { %>
                    <div class="list-group-item border-0 py-3" style="background: transparent; border-bottom: 1px solid rgba(255, 255, 255, 0.05) !important;">
                        <div class="d-flex">
                            <% if (event.type === 'user') { %>
                                <div style="background: var(--vui-primary-gradient)" class="rounded-circle p-2 me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-person text-light"></i>
                                </div>
                            <% } else if (event.type === 'transaction') { %>
                                <div style="background: var(--vui-warning-gradient)" class="rounded-circle p-2 me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-coin text-light"></i>
                                </div>
                            <% } else if (event.type === 'game') { %>
                                <div style="background: var(--vui-success-gradient)" class="rounded-circle p-2 me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-controller text-light"></i>
                                </div>
                            <% } else if (event.type === 'clan') { %>
                                <div style="background: var(--vui-info-gradient)" class="rounded-circle p-2 me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-building text-light"></i>
                                </div>
                            <% } else { %>
                                <div style="background: var(--vui-primary-gradient)" class="rounded-circle p-2 me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-info-circle text-light"></i>
                                </div>
                            <% } %>
                            <div>
                                <p class="mb-0 text-light"><%= event.message %></p>
                                <small class="text-light-50">
                                    <i class="bi bi-clock me-1"></i>
                                    <%= new Date(event.timestamp).toLocaleTimeString('fa-IR') %> | 
                                    <%= new Date(event.timestamp).toLocaleDateString('fa-IR') %>
                                </small>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- مدال بروزرسانی با استایل Vision UI -->
<div class="modal fade" id="refreshModal" tabindex="-1" aria-labelledby="refreshModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="vui-modal-content">
            <div class="vui-modal-header">
                <h5 class="gradient-text-primary fw-bold" id="refreshModalLabel">بروزرسانی داشبورد</h5>
                <button type="button" class="btn-close-light" data-bs-dismiss="modal" aria-label="Close">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="vui-modal-body">
                <div class="text-center py-3">
                    <div class="vui-modal-icon primary mb-4">
                        <i class="bi bi-arrow-clockwise"></i>
                    </div>
                    <h6 class="text-light mb-3">بروزرسانی اطلاعات داشبورد</h6>
                    <p class="text-light-50">آیا می‌خواهید داشبورد را بروزرسانی کنید؟</p>
                    <p class="text-light-50 small">این عملیات ممکن است چند ثانیه طول بکشد.</p>
                </div>
            </div>
            <div class="vui-modal-footer">
                <button type="button" class="vui-btn vui-btn-outline" data-bs-dismiss="modal">انصراف</button>
                <a href="/admin/dashboard?refresh=true" class="vui-btn vui-btn-primary">
                    <i class="bi bi-arrow-clockwise me-2"></i>بروزرسانی
                </a>
            </div>
        </div>
    </div>
</div>

<!-- اسکریپت‌های نمودارها -->
<!-- اسکریپت نمودارها -->
<script>
  // داده‌های نمودار فعالیت کاربران
  const userActivityData = {
    labels: <%- JSON.stringify(charts.userActivity.labels) %>,
    datasets: [{
      label: 'تعداد کاربران فعال',
      backgroundColor: 'rgba(0, 117, 255, 0.2)',
      borderColor: 'rgba(0, 117, 255, 1)',
      borderWidth: 2,
      tension: 0.4,
      pointRadius: 3,
      pointBackgroundColor: 'rgba(0, 117, 255, 1)',
      pointBorderColor: 'rgba(0, 0, 0, 0)',
      pointHoverBackgroundColor: '#fff',
      pointHoverBorderColor: 'rgba(0, 117, 255, 1)',
      pointHoverRadius: 5,
      pointHoverBorderWidth: 2,
      fill: true,
      data: <%- JSON.stringify(charts.userActivity.data) %>
    }]
  };

  // داده‌های نمودار تراکنش‌ها
  const transactionsData = {
    labels: <%- JSON.stringify(charts.transactions.labels) %>,
    datasets: [{
      label: 'واریز',
      backgroundColor: 'rgba(33, 212, 253, 0.7)',
      borderColor: 'rgba(33, 212, 253, 1)',
      borderWidth: 0,
      borderRadius: 5,
      maxBarThickness: 10,
      data: <%- JSON.stringify(charts.transactions.deposits) %>
    }, {
      label: 'برداشت',
      backgroundColor: 'rgba(249, 99, 59, 0.7)',
      borderColor: 'rgba(249, 99, 59, 1)',
      borderWidth: 0,
      borderRadius: 5,
      maxBarThickness: 10,
      data: <%- JSON.stringify(charts.transactions.withdrawals) %>
    }]
  };

  // داده‌های نمودار بازی‌ها
  const gamesData = {
    labels: <%- JSON.stringify(charts.games.labels) %>,
    datasets: [{
      data: <%- JSON.stringify(charts.games.data) %>,
      backgroundColor: [
        'rgba(33, 212, 253, 0.8)',
        'rgba(0, 117, 255, 0.8)',
        'rgba(249, 99, 59, 0.8)',
        'rgba(134, 69, 255, 0.8)',
        'rgba(229, 233, 234, 0.6)'
      ],
      borderWidth: 0,
      cutout: '70%'
    }]
  };

  // تنظیمات نمودارها
  window.addEventListener('DOMContentLoaded', function() {
    // تنظیمات مشترک
    Chart.defaults.color = '#e9ecef';
    Chart.defaults.font.family = "'Vazirmatn', sans-serif";
    
    // نمودار فعالیت کاربران
    const userActivityChart = new Chart(
      document.getElementById('userActivityChart'),
      {
        type: 'line',
        data: userActivityData,
        options: {
          responsive: true,
          maintainAspectRatio: false,
          scales: {
            y: {
              beginAtZero: true,
              grid: {
                color: 'rgba(255, 255, 255, 0.1)'
              }
            },
            x: {
              grid: {
                color: 'rgba(255, 255, 255, 0.1)'
              }
            }
          }
        }
      }
    );
    
    // نمودار تراکنش‌ها
    const transactionsChart = new Chart(
      document.getElementById('transactionsChart'),
      {
        type: 'bar',
        data: transactionsData,
        options: {
          responsive: true,
          maintainAspectRatio: false,
          scales: {
            y: {
              beginAtZero: true,
              grid: {
                color: 'rgba(255, 255, 255, 0.1)'
              }
            },
            x: {
              grid: {
                color: 'rgba(255, 255, 255, 0.1)'
              }
            }
          }
        }
      }
    );
    
    // نمودار بازی‌ها
    const gamesChart = new Chart(
      document.getElementById('gamesChart'),
      {
        type: 'doughnut',
        data: gamesData,
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              position: 'bottom'
            }
          }
        }
      }
    );
  });
</script>

<%- include('partials/footer') %>