<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 gradient-text-primary fw-bold">داشبورد مدیریت</h1>
    <div>
        <button type="button" class="btn-3d" data-bs-toggle="modal" data-bs-target="#refreshModal" style="background: var(--primary-gradient); color: white; border: none; padding: 10px 20px; border-radius: 10px;">
            <i class="bi bi-arrow-clockwise me-1"></i> بروزرسانی
        </button>
    </div>
</div>

<!-- کارت‌های آمار -->
<div class="row mb-4">
    <div class="col-md-3 mb-4">
        <div class="stat-card glass-card floating-card">
            <div class="stat-card-header">
                <h6 class="stat-card-label">کاربران</h6>
                <div class="stat-card-value"><%= stats.totalUsers.toLocaleString() %></div>
                <div class="stat-card-icon primary">
                    <i class="bi bi-people"></i>
                </div>
            </div>
            <div class="stat-card-body">
                <% if (stats.newUsers > 0) { %>
                <div class="stat-card-trend up">
                    <i class="bi bi-arrow-up-short"></i>
                    <%= stats.newUsers %> کاربر جدید
                    <span class="period">در 24 ساعت گذشته</span>
                </div>
                <% } else { %>
                <div class="stat-card-trend">
                    <i class="bi bi-dash"></i>
                    بدون کاربر جدید
                    <span class="period">در 24 ساعت گذشته</span>
                </div>
                <% } %>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="stat-card glass-card floating-card">
            <div class="stat-card-header">
                <h6 class="stat-card-label">مجموع Ccoin</h6>
                <div class="stat-card-value"><%= stats.totalCcoin.toLocaleString() %></div>
                <div class="stat-card-icon warning">
                    <i class="bi bi-coin"></i>
                </div>
            </div>
            <div class="stat-card-body">
                <% if (stats.economyChange > 0) { %>
                <div class="stat-card-trend up">
                    <i class="bi bi-arrow-up-short"></i>
                    <%= stats.economyChange.toLocaleString() %> افزایش
                    <span class="period">در 24 ساعت گذشته</span>
                </div>
                <% } else if (stats.economyChange < 0) { %>
                <div class="stat-card-trend down">
                    <i class="bi bi-arrow-down-short"></i>
                    <%= Math.abs(stats.economyChange).toLocaleString() %> کاهش
                    <span class="period">در 24 ساعت گذشته</span>
                </div>
                <% } else { %>
                <div class="stat-card-trend">
                    <i class="bi bi-dash"></i>
                    بدون تغییر
                    <span class="period">در 24 ساعت گذشته</span>
                </div>
                <% } %>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="stat-card glass-card floating-card">
            <div class="stat-card-header">
                <h6 class="stat-card-label">تعداد کلن‌ها</h6>
                <div class="stat-card-value"><%= stats.totalClans.toLocaleString() %></div>
                <div class="stat-card-icon info">
                    <i class="bi bi-building"></i>
                </div>
            </div>
            <div class="stat-card-body">
                <% if (stats.newClans > 0) { %>
                <div class="stat-card-trend up">
                    <i class="bi bi-arrow-up-short"></i>
                    <%= stats.newClans %> کلن جدید
                    <span class="period">در 24 ساعت گذشته</span>
                </div>
                <% } else { %>
                <div class="stat-card-trend">
                    <i class="bi bi-dash"></i>
                    بدون کلن جدید
                    <span class="period">در 24 ساعت گذشته</span>
                </div>
                <% } %>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="stat-card glass-card floating-card">
            <div class="stat-card-header">
                <h6 class="stat-card-label">ماموریت‌های فعال</h6>
                <div class="stat-card-value"><%= stats.activeQuests.toLocaleString() %></div>
                <div class="stat-card-icon success">
                    <i class="bi bi-journal-check"></i>
                </div>
            </div>
            <div class="stat-card-body">
                <div class="stat-card-trend">
                    <i class="bi bi-check2-circle"></i>
                    <%= stats.completedQuests.toLocaleString() %> ماموریت کامل شده
                    <span class="period">در هفته گذشته</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- نمودارها -->
<div class="row mb-4">
    <!-- نمودار فعالیت کاربران -->
    <div class="col-md-6 mb-4">
        <div class="glass-card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0 gradient-text-primary">فعالیت کاربران</h6>
                <div class="dropdown">
                    <button class="btn-icon" type="button" id="userActivityDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-three-dots"></i>
                    </button>
                    <ul class="dropdown-menu glass-card" aria-labelledby="userActivityDropdown">
                        <li><a class="dropdown-item" href="#">امروز</a></li>
                        <li><a class="dropdown-item" href="#">7 روز گذشته</a></li>
                        <li><a class="dropdown-item" href="#">30 روز گذشته</a></li>
                    </ul>
                </div>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <div class="text-light-50 small">
                        دوره زمانی: <span class="text-light">7 روز گذشته</span>
                    </div>
                    <div class="custom-tooltip">
                        <i class="bi bi-info-circle text-light-50"></i>
                        <span class="tooltip-text">نمودار تعداد کاربران فعال روزانه</span>
                    </div>
                </div>
                <canvas id="userActivityChart" height="250"></canvas>
            </div>
        </div>
    </div>
    
    <!-- نمودار تراکنش‌ها -->
    <div class="col-md-6 mb-4">
        <div class="glass-card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0 gradient-text-warning">تراکنش‌های Ccoin</h6>
                <div class="dropdown">
                    <button class="btn-icon" type="button" id="transactionsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-three-dots"></i>
                    </button>
                    <ul class="dropdown-menu glass-card" aria-labelledby="transactionsDropdown">
                        <li><a class="dropdown-item" href="#">امروز</a></li>
                        <li><a class="dropdown-item" href="#">7 روز گذشته</a></li>
                        <li><a class="dropdown-item" href="#">30 روز گذشته</a></li>
                    </ul>
                </div>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <div class="text-light-50 small">
                        دوره زمانی: <span class="text-light">7 روز گذشته</span>
                    </div>
                    <div class="d-flex">
                        <div class="d-flex align-items-center me-3">
                            <span class="status-dot" style="background-color: rgba(67, 181, 129, 0.7)"></span>
                            <small class="ms-2 text-light-50">واریز</small>
                        </div>
                        <div class="d-flex align-items-center">
                            <span class="status-dot" style="background-color: rgba(240, 71, 71, 0.7)"></span>
                            <small class="ms-2 text-light-50">برداشت</small>
                        </div>
                    </div>
                </div>
                <canvas id="transactionsChart" height="250"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <!-- آمار بازی‌ها -->
    <div class="col-md-4 mb-4">
        <div class="glass-card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0 gradient-text-success">آمار بازی‌ها</h6>
                <div class="custom-tooltip">
                    <i class="bi bi-info-circle text-light-50"></i>
                    <span class="tooltip-text">توزیع بازی‌های انجام شده</span>
                </div>
            </div>
            <div class="card-body">
                <canvas id="gamesChart" height="250"></canvas>
            </div>
        </div>
    </div>
    
    <!-- کاربران فعال -->
    <div class="col-md-4 mb-4">
        <div class="glass-card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0 gradient-text-info">کاربران فعال اخیر</h6>
                <a href="/admin/users" class="btn-icon">
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    <% recentUsers.forEach(user => { %>
                    <a href="/admin/users/<%= user.id %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center border-0 py-3">
                        <div class="d-flex align-items-center">
                            <div class="gradient-primary rounded-circle p-2 me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                <i class="bi bi-person text-light"></i>
                            </div>
                            <div>
                                <h6 class="mb-0 text-light"><%= user.username %></h6>
                                <small class="text-light-50"><%= Math.floor(user.wallet + user.bank).toLocaleString() %> Ccoin</small>
                            </div>
                        </div>
                        <div class="custom-tooltip">
                            <small class="badge-gradient badge-info px-2 py-1" style="font-size: 0.7rem">فعال</small>
                            <span class="tooltip-text">آخرین فعالیت: <%= new Date(user.lastSeen).toLocaleDateString('fa-IR') %></span>
                        </div>
                    </a>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
    
    <!-- آخرین رویدادها -->
    <div class="col-md-4 mb-4">
        <div class="glass-card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0 gradient-text-warning">آخرین رویدادها</h6>
                <a href="/admin/logs" class="btn-icon">
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    <% recentEvents.forEach(event => { %>
                    <div class="list-group-item border-0 py-3" style="background: transparent; border-bottom: 1px solid rgba(255, 255, 255, 0.05) !important;">
                        <div class="d-flex">
                            <% if (event.type === 'user') { %>
                                <div class="gradient-primary rounded-circle p-2 me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-person text-light"></i>
                                </div>
                            <% } else if (event.type === 'transaction') { %>
                                <div class="gradient-warning rounded-circle p-2 me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-coin text-light"></i>
                                </div>
                            <% } else if (event.type === 'game') { %>
                                <div class="gradient-success rounded-circle p-2 me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-controller text-light"></i>
                                </div>
                            <% } else if (event.type === 'clan') { %>
                                <div class="gradient-info rounded-circle p-2 me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-building text-light"></i>
                                </div>
                            <% } else { %>
                                <div class="gradient-primary rounded-circle p-2 me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-info-circle text-light"></i>
                                </div>
                            <% } %>
                            <div>
                                <p class="mb-0 text-light"><%= event.message %></p>
                                <small class="text-light-50">
                                    <i class="bi bi-clock me-1"></i>
                                    <%= new Date(event.timestamp).toLocaleTimeString('fa-IR') %> | 
                                    <%= new Date(event.timestamp).toLocaleDateString('fa-IR') %>
                                </small>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- مدال بروزرسانی -->
<div class="modal fade" id="refreshModal" tabindex="-1" aria-labelledby="refreshModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content glass-card border-0">
            <div class="modal-header border-bottom border-light border-opacity-10">
                <h5 class="modal-title gradient-text-primary" id="refreshModalLabel">بروزرسانی داشبورد</h5>
                <button type="button" class="btn-icon" data-bs-dismiss="modal" aria-label="Close">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="text-center py-3">
                    <div class="mb-4">
                        <i class="bi bi-arrow-clockwise text-light" style="font-size: 3rem;"></i>
                    </div>
                    <p class="text-light mb-1">آیا می‌خواهید داشبورد را بروزرسانی کنید؟</p>
                    <p class="text-light-50 small">این عملیات ممکن است چند ثانیه طول بکشد.</p>
                </div>
            </div>
            <div class="modal-footer border-top border-light border-opacity-10">
                <button type="button" class="btn-icon" data-bs-dismiss="modal">انصراف</button>
                <a href="/admin/dashboard?refresh=true" class="btn-3d" style="background: var(--primary-gradient); color: white; border: none; padding: 8px 20px; border-radius: 10px;">
                    <i class="bi bi-arrow-clockwise me-2"></i>بروزرسانی
                </a>
            </div>
        </div>
    </div>
</div>

