<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">داشبورد</h1>
    <div>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#refreshModal">
            <i class="bi bi-arrow-clockwise me-1"></i> بروزرسانی
        </button>
    </div>
</div>

<!-- کارت‌های آمار -->
<div class="row mb-4">
    <div class="col-md-3 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">کاربران</h6>
                        <h3 class="mb-0"><%= stats.totalUsers.toLocaleString() %></h3>
                    </div>
                    <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                        <i class="bi bi-people text-primary fs-4"></i>
                    </div>
                </div>
                <div class="mt-3 small">
                    <% if (stats.newUsers > 0) { %>
                    <span class="text-success">
                        <i class="bi bi-arrow-up me-1"></i>
                        <%= stats.newUsers %> کاربر جدید
                    </span>
                    <% } else { %>
                    <span class="text-muted">
                        <i class="bi bi-dash me-1"></i>
                        بدون کاربر جدید
                    </span>
                    <% } %>
                    <span class="text-muted ms-2">در 24 ساعت گذشته</span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">مجموع Ccoin</h6>
                        <h3 class="mb-0"><%= stats.totalCcoin.toLocaleString() %></h3>
                    </div>
                    <div class="rounded-circle bg-warning bg-opacity-10 p-3">
                        <i class="bi bi-coin text-warning fs-4"></i>
                    </div>
                </div>
                <div class="mt-3 small">
                    <% if (stats.economyChange > 0) { %>
                    <span class="text-success">
                        <i class="bi bi-arrow-up me-1"></i>
                        <%= stats.economyChange.toLocaleString() %> افزایش
                    </span>
                    <% } else if (stats.economyChange < 0) { %>
                    <span class="text-danger">
                        <i class="bi bi-arrow-down me-1"></i>
                        <%= Math.abs(stats.economyChange).toLocaleString() %> کاهش
                    </span>
                    <% } else { %>
                    <span class="text-muted">
                        <i class="bi bi-dash me-1"></i>
                        بدون تغییر
                    </span>
                    <% } %>
                    <span class="text-muted ms-2">در 24 ساعت گذشته</span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">تعداد کلن‌ها</h6>
                        <h3 class="mb-0"><%= stats.totalClans.toLocaleString() %></h3>
                    </div>
                    <div class="rounded-circle bg-info bg-opacity-10 p-3">
                        <i class="bi bi-building text-info fs-4"></i>
                    </div>
                </div>
                <div class="mt-3 small">
                    <% if (stats.newClans > 0) { %>
                    <span class="text-success">
                        <i class="bi bi-arrow-up me-1"></i>
                        <%= stats.newClans %> کلن جدید
                    </span>
                    <% } else { %>
                    <span class="text-muted">
                        <i class="bi bi-dash me-1"></i>
                        بدون کلن جدید
                    </span>
                    <% } %>
                    <span class="text-muted ms-2">در 24 ساعت گذشته</span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">ماموریت‌های فعال</h6>
                        <h3 class="mb-0"><%= stats.activeQuests.toLocaleString() %></h3>
                    </div>
                    <div class="rounded-circle bg-success bg-opacity-10 p-3">
                        <i class="bi bi-journal-check text-success fs-4"></i>
                    </div>
                </div>
                <div class="mt-3 small">
                    <span class="text-muted">
                        <%= stats.completedQuests.toLocaleString() %> ماموریت کامل شده
                    </span>
                    <span class="text-muted ms-2">در هفته گذشته</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- نمودارها -->
<div class="row mb-4">
    <!-- نمودار فعالیت کاربران -->
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0">فعالیت کاربران</h6>
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="userActivityDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        7 روز گذشته
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="userActivityDropdown">
                        <li><a class="dropdown-item" href="#">امروز</a></li>
                        <li><a class="dropdown-item" href="#">7 روز گذشته</a></li>
                        <li><a class="dropdown-item" href="#">30 روز گذشته</a></li>
                    </ul>
                </div>
            </div>
            <div class="card-body">
                <canvas id="userActivityChart" height="250"></canvas>
            </div>
        </div>
    </div>
    
    <!-- نمودار تراکنش‌ها -->
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0">تراکنش‌های Ccoin</h6>
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="transactionsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        7 روز گذشته
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="transactionsDropdown">
                        <li><a class="dropdown-item" href="#">امروز</a></li>
                        <li><a class="dropdown-item" href="#">7 روز گذشته</a></li>
                        <li><a class="dropdown-item" href="#">30 روز گذشته</a></li>
                    </ul>
                </div>
            </div>
            <div class="card-body">
                <canvas id="transactionsChart" height="250"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <!-- آمار بازی‌ها -->
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-header">
                <h6 class="mb-0">آمار بازی‌ها</h6>
            </div>
            <div class="card-body">
                <canvas id="gamesChart" height="250"></canvas>
            </div>
        </div>
    </div>
    
    <!-- کاربران فعال -->
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0">کاربران فعال اخیر</h6>
                <a href="/users" class="btn btn-sm btn-outline-primary">نمایش همه</a>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    <% recentUsers.forEach(user => { %>
                    <a href="/users/<%= user.id %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center border-0 py-3">
                        <div class="d-flex align-items-center">
                            <div class="bg-secondary bg-opacity-10 rounded-circle p-2 me-3">
                                <i class="bi bi-person"></i>
                            </div>
                            <div>
                                <h6 class="mb-0"><%= user.username %></h6>
                                <small class="text-muted"><%= Math.floor(user.wallet + user.bank).toLocaleString() %> Ccoin</small>
                            </div>
                        </div>
                        <small class="text-muted" data-bs-toggle="tooltip" data-bs-placement="left" title="آخرین فعالیت">
                            <%= new Date(user.lastSeen).toLocaleDateString('fa-IR') %>
                        </small>
                    </a>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
    
    <!-- آخرین رویدادها -->
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0">آخرین رویدادها</h6>
                <a href="/logs" class="btn btn-sm btn-outline-primary">نمایش همه</a>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    <% recentEvents.forEach(event => { %>
                    <div class="list-group-item border-0 py-3">
                        <div class="d-flex">
                            <% if (event.type === 'user') { %>
                                <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-2 me-3">
                                    <i class="bi bi-person"></i>
                                </div>
                            <% } else if (event.type === 'transaction') { %>
                                <div class="bg-warning bg-opacity-10 text-warning rounded-circle p-2 me-3">
                                    <i class="bi bi-coin"></i>
                                </div>
                            <% } else if (event.type === 'game') { %>
                                <div class="bg-success bg-opacity-10 text-success rounded-circle p-2 me-3">
                                    <i class="bi bi-controller"></i>
                                </div>
                            <% } else if (event.type === 'clan') { %>
                                <div class="bg-info bg-opacity-10 text-info rounded-circle p-2 me-3">
                                    <i class="bi bi-building"></i>
                                </div>
                            <% } else { %>
                                <div class="bg-secondary bg-opacity-10 text-secondary rounded-circle p-2 me-3">
                                    <i class="bi bi-info-circle"></i>
                                </div>
                            <% } %>
                            <div>
                                <p class="mb-0"><%= event.message %></p>
                                <small class="text-muted">
                                    <%= new Date(event.timestamp).toLocaleTimeString('fa-IR') %> | 
                                    <%= new Date(event.timestamp).toLocaleDateString('fa-IR') %>
                                </small>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- مدال بروزرسانی -->
<div class="modal fade" id="refreshModal" tabindex="-1" aria-labelledby="refreshModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="refreshModalLabel">بروزرسانی داشبورد</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>آیا می‌خواهید داشبورد را بروزرسانی کنید؟</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
                <a href="/dashboard?refresh=true" class="btn btn-primary">بروزرسانی</a>
            </div>
        </div>
    </div>
</div>

