<%- include('../partials/header') %>

<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0 text-dark">مدیریت کاربران بلاک شده</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-left">
            <li class="breadcrumb-item"><a href="/admin/dashboard">داشبورد</a></li>
            <li class="breadcrumb-item active">کاربران بلاک شده</li>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <div class="content">
    <div class="container-fluid">
      <!-- نمایش آمارها -->
      <div class="row">
        <div class="col-lg-6 col-6">
          <div class="small-box bg-danger">
            <div class="inner">
              <h3><%= stats.totalBlockedUsers %></h3>
              <p>تعداد کل بلاک‌ها</p>
            </div>
            <div class="icon">
              <i class="fas fa-ban"></i>
            </div>
          </div>
        </div>
        
        <div class="col-lg-6 col-6">
          <div class="small-box bg-warning">
            <div class="inner">
              <h3><%= stats.usersWithBlocks %></h3>
              <p>کاربران دارای لیست بلاک</p>
            </div>
            <div class="icon">
              <i class="fas fa-user-slash"></i>
            </div>
          </div>
        </div>
      </div>
      
      <!-- کاربران با بیشترین بلاک -->
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">کاربران با بیشترین بلاک</h3>
            </div>
            <div class="card-body table-responsive p-0">
              <table class="table table-hover text-nowrap">
                <thead>
                  <tr>
                    <th>شناسه</th>
                    <th>نام کاربری</th>
                    <th>تعداد کاربران بلاک شده</th>
                    <th>عملیات</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(topBlockers.length > 0) { %>
                    <% topBlockers.forEach(function(user) { %>
                      <tr>
                        <td><%= user.userId %></td>
                        <td><%= user.username %></td>
                        <td><span class="badge bg-danger"><%= user.blockCount %></span></td>
                        <td>
                          <div class="btn-group">
                            <a href="/admin/users/<%= user.userId %>/blocked" class="btn btn-info btn-sm">
                              <i class="fas fa-eye"></i> مشاهده لیست
                            </a>
                            <a href="/admin/users/<%= user.userId %>" class="btn btn-primary btn-sm">
                              <i class="fas fa-user"></i> پروفایل
                            </a>
                          </div>
                        </td>
                      </tr>
                    <% }); %>
                  <% } else { %>
                    <tr>
                      <td colspan="4" class="text-center">هیچ کاربری با لیست بلاک پیدا نشد.</td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>