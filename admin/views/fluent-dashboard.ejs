<!-- داشبورد با طراحی Fluent UI -->

<div class="fluent-dashboard-page">
    <!-- بخش خلاصه وضعیت -->
    <div class="fluent-dashboard-summary">
        <div class="fluent-card fluent-stat-card">
            <div class="fluent-stat-card-content">
                <div class="fluent-stat-card-icon fluent-bg-primary-lighter">
                    <i data-feather="users"></i>
                </div>
                <div class="fluent-stat-card-info">
                    <p class="fluent-stat-card-title">تعداد کاربران</p>
                    <h3 class="fluent-stat-card-value">
                        <%= usersStats.total || 0 %>
                        <span class="fluent-stat-card-change fluent-stat-card-change-up">
                            <i data-feather="arrow-up"></i> 
                            5.2%
                        </span>
                    </h3>
                    <p class="fluent-stat-card-subtitle">نسبت به ماه گذشته</p>
                </div>
            </div>
        </div>
        
        <div class="fluent-card fluent-stat-card">
            <div class="fluent-stat-card-content">
                <div class="fluent-stat-card-icon fluent-bg-success-lighter">
                    <i data-feather="activity"></i>
                </div>
                <div class="fluent-stat-card-info">
                    <p class="fluent-stat-card-title">کاربران فعال</p>
                    <h3 class="fluent-stat-card-value">
                        <%= usersStats.active || 0 %>
                        <span class="fluent-stat-card-change fluent-stat-card-change-up">
                            <i data-feather="arrow-up"></i>
                            3.1%
                        </span>
                    </h3>
                    <p class="fluent-stat-card-subtitle">نسبت به ماه گذشته</p>
                </div>
            </div>
        </div>
        
        <div class="fluent-card fluent-stat-card">
            <div class="fluent-stat-card-content">
                <div class="fluent-stat-card-icon fluent-bg-info-lighter">
                    <i data-feather="user-plus"></i>
                </div>
                <div class="fluent-stat-card-info">
                    <p class="fluent-stat-card-title">کاربران جدید</p>
                    <h3 class="fluent-stat-card-value">
                        <%= usersStats.new || 0 %>
                        <span class="fluent-stat-card-change fluent-stat-card-change-up">
                            <i data-feather="arrow-up"></i>
                            7.4%
                        </span>
                    </h3>
                    <p class="fluent-stat-card-subtitle">نسبت به ماه گذشته</p>
                </div>
            </div>
        </div>
        
        <div class="fluent-card fluent-stat-card">
            <div class="fluent-stat-card-content">
                <div class="fluent-stat-card-icon fluent-bg-warning-lighter">
                    <i data-feather="trending-up"></i>
                </div>
                <div class="fluent-stat-card-info">
                    <p class="fluent-stat-card-title">وضعیت بازار</p>
                    <h3 class="fluent-stat-card-value">
                        <%= stockMarket.marketStatus || 'خنثی' %>
                        <span class="fluent-stat-card-change <%= stockMarket.marketStatus === 'رونق' ? 'fluent-stat-card-change-up' : (stockMarket.marketStatus === 'بحران' ? 'fluent-stat-card-change-down' : 'fluent-stat-card-change-neutral') %>">
                            <i data-feather="<%= stockMarket.marketStatus === 'رونق' ? 'arrow-up' : (stockMarket.marketStatus === 'بحران' ? 'arrow-down' : 'minus') %>"></i>
                            <%= stockMarket.totalStocks || 0 %> سهم
                        </span>
                    </h3>
                    <p class="fluent-stat-card-subtitle">تعداد سهام: <%= stockMarket.totalStocks || 0 %></p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- بخش دوم - چارت‌ها و جدول‌ها -->
    <div class="fluent-dashboard-charts-container">
        <!-- نمودار تراکنش‌ها -->
        <div class="fluent-card fluent-chart-card">
            <div class="fluent-card-header">
                <h3 class="fluent-card-title">تراکنش‌های اخیر</h3>
                <div class="fluent-card-header-actions">
                    <button class="fluent-icon-button small">
                        <i class="fa-solid fa-download"></i>
                    </button>
                    <button class="fluent-icon-button small">
                        <i class="fa-solid fa-ellipsis-vertical"></i>
                    </button>
                </div>
            </div>
            <div class="fluent-card-content">
                <div class="fluent-chart-container">
                    <canvas id="transactionsChart"></canvas>
                </div>
            </div>
        </div>
        
        <!-- نمودار کاربران -->
        <div class="fluent-card fluent-chart-card">
            <div class="fluent-card-header">
                <h3 class="fluent-card-title">کاربران جدید</h3>
                <div class="fluent-card-header-actions">
                    <button class="fluent-icon-button small">
                        <i class="fa-solid fa-download"></i>
                    </button>
                    <button class="fluent-icon-button small">
                        <i class="fa-solid fa-ellipsis-vertical"></i>
                    </button>
                </div>
            </div>
            <div class="fluent-card-content">
                <div class="fluent-chart-container">
                    <canvas id="usersChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- بخش سوم - لیست‌ها -->
    <div class="fluent-dashboard-lists-container">
        <!-- تراکنش‌های اخیر -->
        <div class="fluent-card">
            <div class="fluent-card-header">
                <h3 class="fluent-card-title">تراکنش‌های اخیر</h3>
                <div class="fluent-card-header-actions">
                    <a href="/admin/transactions" class="fluent-button small">
                        مشاهده همه
                        <i class="fa-solid fa-arrow-left"></i>
                    </a>
                </div>
            </div>
            <div class="fluent-card-content">
                <div class="fluent-table-container">
                    <table class="fluent-table">
                        <thead>
                            <tr>
                                <th>کاربر</th>
                                <th>نوع</th>
                                <th>مبلغ</th>
                                <th>تاریخ</th>
                                <th>وضعیت</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (recentTransactions && recentTransactions.length > 0) { %>
                                <% recentTransactions.forEach(transaction => { %>
                                    <tr>
                                        <td>
                                            <div class="fluent-user-row">
                                                <div class="fluent-avatar small">
                                                    <img src="<%= transaction.user?.avatar || '/admin/public/img/default-avatar.png' %>" alt="<%= transaction.user?.username || 'کاربر' %>">
                                                </div>
                                                <span><%= transaction.user?.username || 'کاربر' %></span>
                                            </div>
                                        </td>
                                        <td><%= transaction.type || 'نامشخص' %></td>
                                        <td class="<%= transaction.amount > 0 ? 'text-success' : 'text-danger' %>">
                                            <%= transaction.amount > 0 ? '+' : '' %><%= transaction.amount || 0 %> C
                                        </td>
                                        <td><%= transaction.date ? new Date(transaction.date).toLocaleDateString('fa-IR') : 'نامشخص' %></td>
                                        <td>
                                            <span class="fluent-badge <%= transaction.status === 'completed' ? 'success' : (transaction.status === 'pending' ? 'warning' : 'neutral') %>">
                                                <%= transaction.status === 'completed' ? 'تکمیل شده' : (transaction.status === 'pending' ? 'در انتظار' : 'نامشخص') %>
                                            </span>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="text-center">تراکنشی یافت نشد</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
        <!-- رویدادهای اخیر -->
        <div class="fluent-card">
            <div class="fluent-card-header">
                <h3 class="fluent-card-title">رویدادهای اخیر</h3>
                <div class="fluent-card-header-actions">
                    <a href="/admin/events" class="fluent-button small">
                        مشاهده همه
                        <i class="fa-solid fa-arrow-left"></i>
                    </a>
                </div>
            </div>
            <div class="fluent-card-content">
                <div class="fluent-events-list">
                    <% if (recentEvents && recentEvents.length > 0) { %>
                        <% recentEvents.forEach(event => { %>
                            <div class="fluent-event-item">
                                <div class="fluent-event-icon fluent-bg-<%= event.type === 'giveaway' ? 'primary' : (event.type === 'lottery' ? 'success' : (event.type === 'market_crash' ? 'danger' : 'info')) %>-lighter">
                                    <i data-feather="<%= getEventIcon(event.type) %>"></i>
                                </div>
                                <div class="fluent-event-content">
                                    <h4 class="fluent-event-title"><%= event.title || 'رویداد' %></h4>
                                    <p class="fluent-event-description"><%= event.description || 'توضیحات رویداد' %></p>
                                    <div class="fluent-event-meta">
                                        <span class="fluent-event-date">
                                            <i data-feather="calendar"></i>
                                            <%= event.date ? new Date(event.date).toLocaleDateString('fa-IR') : 'نامشخص' %>
                                        </span>
                                        <span class="fluent-event-status">
                                            <i data-feather="<%= event.active ? 'check-circle' : 'clock' %>"></i>
                                            <%= event.active ? 'فعال' : 'غیرفعال' %>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="fluent-empty-state">
                            <i data-feather="calendar"></i>
                            <p>رویدادی یافت نشد</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // اسکریپت‌های مخصوص صفحه داشبورد
    document.addEventListener('DOMContentLoaded', function() {
        // بارگذاری آیکون‌های Feather
        if (typeof feather !== 'undefined') {
            feather.replace();
        }
        
        // نمودار تراکنش‌ها
        const transactionsChart = document.getElementById('transactionsChart');
        if (transactionsChart && typeof Chart !== 'undefined') {
            new Chart(transactionsChart, {
                type: 'line',
                data: {
                    labels: ['فروردین', 'اردیبهشت', 'خرداد', 'تیر', 'مرداد', 'شهریور', 'مهر', 'آبان', 'آذر', 'دی', 'بهمن', 'اسفند'],
                    datasets: [{
                        label: 'تراکنش‌ها',
                        data: [1200, 1900, 2300, 1800, 2500, 3000, 2800, 3200, 3500, 3800, 4000, 4200],
                        borderColor: 'rgb(0, 120, 212)',
                        backgroundColor: 'rgba(0, 120, 212, 0.1)',
                        tension: 0.3,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }
        
        // نمودار کاربران
        const usersChart = document.getElementById('usersChart');
        if (usersChart && typeof Chart !== 'undefined') {
            new Chart(usersChart, {
                type: 'bar',
                data: {
                    labels: ['فروردین', 'اردیبهشت', 'خرداد', 'تیر', 'مرداد', 'شهریور'],
                    datasets: [{
                        label: 'کاربران جدید',
                        data: [65, 80, 91, 76, 85, 99],
                        backgroundColor: 'rgb(0, 120, 212)'
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }
    });
</script>
