<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | پنل مدیریت CCOIN</title>
    
    <!-- فونت‌ها -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- آیکون‌ها -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- استایل‌های فلوئنت UI -->
    <link rel="stylesheet" href="/admin/public/css/fluent.css">
    
    <!-- استایل‌های قبلی برای حفظ سازگاری -->
    <link rel="stylesheet" href="/admin/public/css/admin.css">
    
    <!-- اسکریپت‌های اضافی -->
    <% if (typeof extraStyles !== 'undefined') { %>
        <%- extraStyles %>
    <% } %>
</head>
<body>
    <!-- بک‌دراپ منو موبایل -->
    <div class="fluent-backdrop" id="mobileMenuBackdrop"></div>

    <div class="fluent-app-container">
        <!-- نوار کناری -->
        <aside class="fluent-sidebar">
            <div class="fluent-sidebar-header">
                <div class="fluent-sidebar-logo">
                    <img src="/admin/public/img/ccoin-logo.png" alt="CCOIN">
                    <span>CCOIN</span>
                </div>
                <button class="fluent-sidebar-close-btn" id="closeSidebarBtn">
                    <i class="fa-solid fa-xmark"></i>
                </button>
            </div>
            
            <div class="fluent-sidebar-content">
                <nav class="fluent-navigation">
                    <ul>
                        <li class="<%= currentRoute === '/admin/dashboard' ? 'active' : '' %>">
                            <a href="/admin/dashboard">
                                <i class="fa-solid fa-gauge-high"></i>
                                <span>داشبورد</span>
                            </a>
                        </li>
                        
                        <li class="<%= currentRoute.startsWith('/admin/users') ? 'active' : '' %>">
                            <a href="/admin/users">
                                <i class="fa-solid fa-users"></i>
                                <span>کاربران</span>
                            </a>
                        </li>
                        
                        <li class="<%= currentRoute.startsWith('/admin/economy') ? 'active' : '' %>">
                            <a href="/admin/economy">
                                <i class="fa-solid fa-coins"></i>
                                <span>اقتصاد</span>
                            </a>
                        </li>
                        
                        <li class="<%= currentRoute.startsWith('/admin/transactions') ? 'active' : '' %>">
                            <a href="/admin/transactions">
                                <i class="fa-solid fa-money-bill-transfer"></i>
                                <span>تراکنش‌ها</span>
                            </a>
                        </li>
                        
                        <li class="<%= currentRoute.startsWith('/admin/games') ? 'active' : '' %>">
                            <a href="/admin/games">
                                <i class="fa-solid fa-gamepad"></i>
                                <span>بازی‌ها</span>
                            </a>
                        </li>
                        
                        <li class="<%= currentRoute.startsWith('/admin/events') ? 'active' : '' %>">
                            <a href="/admin/events">
                                <i class="fa-solid fa-calendar-days"></i>
                                <span>رویدادها</span>
                            </a>
                        </li>
                        
                        <li class="<%= currentRoute.startsWith('/admin/banks') ? 'active' : '' %>">
                            <a href="/admin/banks">
                                <i class="fa-solid fa-landmark"></i>
                                <span>بانک‌ها</span>
                            </a>
                        </li>
                        
                        <li class="<%= currentRoute.startsWith('/admin/logs') ? 'active' : '' %>">
                            <a href="/admin/logs">
                                <i class="fa-solid fa-list"></i>
                                <span>لاگ‌ها</span>
                            </a>
                        </li>
                        
                        <li class="<%= currentRoute.startsWith('/admin/settings') ? 'active' : '' %>">
                            <a href="/admin/settings">
                                <i class="fa-solid fa-gear"></i>
                                <span>تنظیمات</span>
                            </a>
                        </li>
                        
                        <li class="<%= currentRoute.startsWith('/admin/ai') ? 'active' : '' %>">
                            <a href="/admin/ai">
                                <i class="fa-solid fa-brain"></i>
                                <span>هوش مصنوعی</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- محتوای اصلی -->
        <main class="fluent-main-content">
            <!-- هدر -->
            <header class="fluent-header">
                <div class="fluent-header-left">
                    <button class="fluent-menu-toggle" id="menuToggle">
                        <i class="fa-solid fa-bars"></i>
                    </button>
                    <h1 class="fluent-page-title"><%= title %></h1>
                </div>
                
                <div class="fluent-header-right">
                    <div class="fluent-search">
                        <i class="fa-solid fa-search"></i>
                        <input type="text" placeholder="جستجو...">
                    </div>
                    
                    <div class="fluent-notifications">
                        <button class="fluent-icon-button" aria-label="اعلان‌ها">
                            <i class="fa-solid fa-bell"></i>
                            <span class="badge">3</span>
                        </button>
                    </div>
                    
                    <div class="fluent-user-menu">
                        <div class="fluent-user-info">
                            <img src="/admin/public/img/user-avatar.png" alt="<%= user.username %>">
                            <span><%= user.username %></span>
                            <i class="fa-solid fa-chevron-down"></i>
                        </div>
                        
                        <div class="fluent-dropdown-menu">
                            <a href="/admin/settings/profile">
                                <i class="fa-solid fa-user"></i>
                                <span>پروفایل</span>
                            </a>
                            <a href="/admin/settings">
                                <i class="fa-solid fa-gear"></i>
                                <span>تنظیمات</span>
                            </a>
                            <div class="fluent-dropdown-divider"></div>
                            <a href="/admin/logout">
                                <i class="fa-solid fa-sign-out-alt"></i>
                                <span>خروج</span>
                            </a>
                        </div>
                    </div>
                </div>
            </header>

            <!-- محتوا -->
            <div class="fluent-content">
                <% if (messages.error) { %>
                    <div class="fluent-alert error">
                        <i class="fa-solid fa-circle-exclamation"></i>
                        <%= messages.error %>
                    </div>
                <% } %>
                
                <% if (messages.success) { %>
                    <div class="fluent-alert success">
                        <i class="fa-solid fa-circle-check"></i>
                        <%= messages.success %>
                    </div>
                <% } %>
                
                <% if (messages.info) { %>
                    <div class="fluent-alert info">
                        <i class="fa-solid fa-circle-info"></i>
                        <%= messages.info %>
                    </div>
                <% } %>
                
                <%- body %>
            </div>
        </main>
    </div>

    <!-- اسکریپت‌های فلوئنت -->
    <script src="/admin/public/js/fluent-ui.js"></script>
    
    <!-- اسکریپت‌های قبلی -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.6.0/chart.min.js"></script>
    <script src="/admin/public/js/admin.js"></script>
    
    <!-- اسکریپت‌های اضافی -->
    <% if (typeof extraScripts !== 'undefined') { %>
        <%- extraScripts %>
    <% } %>
    
    <script>
        // فعال‌سازی عملکرد منوی موبایل
        document.addEventListener('DOMContentLoaded', function() {
            const menuToggle = document.getElementById('menuToggle');
            const closeSidebarBtn = document.getElementById('closeSidebarBtn');
            const backdrop = document.getElementById('mobileMenuBackdrop');
            const sidebar = document.querySelector('.fluent-sidebar');
            
            if (menuToggle && closeSidebarBtn && backdrop && sidebar) {
                menuToggle.addEventListener('click', function() {
                    sidebar.classList.add('active');
                    backdrop.classList.add('active');
                    document.body.style.overflow = 'hidden';
                });
                
                closeSidebarBtn.addEventListener('click', function() {
                    sidebar.classList.remove('active');
                    backdrop.classList.remove('active');
                    document.body.style.overflow = '';
                });
                
                backdrop.addEventListener('click', function() {
                    sidebar.classList.remove('active');
                    backdrop.classList.remove('active');
                    document.body.style.overflow = '';
                });
            }
            
            // فعال‌سازی منوی کاربر
            const userMenu = document.querySelector('.fluent-user-info');
            const dropdownMenu = document.querySelector('.fluent-dropdown-menu');
            
            if (userMenu && dropdownMenu) {
                userMenu.addEventListener('click', function(e) {
                    e.stopPropagation();
                    dropdownMenu.classList.toggle('active');
                });
                
                document.addEventListener('click', function() {
                    dropdownMenu.classList.remove('active');
                });
            }
        });
    </script>
</body>
</html>
