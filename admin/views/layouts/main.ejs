<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | پنل مدیریت CCOIN</title>
    
    <!-- فونت‌ها -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- آیکون‌ها -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- استایل‌ها -->
    <link rel="stylesheet" href="/admin/public/css/admin.css">
    
    <!-- اسکریپت‌های اضافی -->
    <% if (typeof extraStyles !== 'undefined') { %>
        <%- extraStyles %>
    <% } %>
</head>
<body>
    <div class="admin-layout">
        <!-- منوی کناری -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <img src="/admin/public/images/logo.png" alt="CCOIN Logo" class="sidebar-logo">
                <h3 class="sidebar-title">پنل مدیریت CCOIN</h3>
            </div>
            <ul class="sidebar-menu">
                <li>
                    <a href="/admin/dashboard">
                        <i class="fas fa-tachometer-alt"></i>
                        داشبورد
                    </a>
                </li>
                <li>
                    <a href="/admin/users">
                        <i class="fas fa-users"></i>
                        مدیریت کاربران
                    </a>
                </li>
                <li>
                    <a href="/admin/economy">
                        <i class="fas fa-coins"></i>
                        سیستم اقتصادی
                    </a>
                </li>
                <li>
                    <a href="/admin/economy/transactions">
                        <i class="fas fa-exchange-alt"></i>
                        تراکنش‌ها
                    </a>
                </li>
                <li>
                    <a href="/admin/economy/stocks">
                        <i class="fas fa-chart-line"></i>
                        بازار سهام
                    </a>
                </li>
                <li>
                    <a href="/admin/economy/banks">
                        <i class="fas fa-university"></i>
                        بانک‌ها
                    </a>
                </li>
                <li>
                    <a href="/admin/economy/shops">
                        <i class="fas fa-store"></i>
                        فروشگاه‌ها
                    </a>
                </li>
                <li>
                    <a href="/admin/economy/items">
                        <i class="fas fa-box"></i>
                        آیتم‌ها
                    </a>
                </li>
                <li>
                    <a href="/admin/games">
                        <i class="fas fa-gamepad"></i>
                        مدیریت بازی‌ها
                    </a>
                </li>
                <li>
                    <a href="/admin/events">
                        <i class="fas fa-calendar-alt"></i>
                        رویدادها
                    </a>
                </li>
                <li>
                    <a href="/admin/ai">
                        <i class="fas fa-robot"></i>
                        تنظیمات هوش مصنوعی
                    </a>
                </li>
                <li>
                    <a href="/admin/settings">
                        <i class="fas fa-cog"></i>
                        تنظیمات
                    </a>
                </li>
                <li>
                    <a href="/admin/logout">
                        <i class="fas fa-sign-out-alt"></i>
                        خروج
                    </a>
                </li>
            </ul>
        </aside>
        
        <!-- هدر -->
        <header class="header">
            <div class="header-left">
                <button class="toggle-sidebar">
                    <i class="fas fa-bars"></i>
                </button>
                <h2 class="page-title"><%= title %></h2>
            </div>
            <div class="header-right">
                <div class="user-dropdown">
                    <span><i class="fas fa-user-circle"></i> <%= user.username %></span>
                    <div class="dropdown-menu">
                        <a href="/admin/profile" class="dropdown-item">
                            <i class="fas fa-user"></i> پروفایل
                        </a>
                        <a href="/admin/settings" class="dropdown-item">
                            <i class="fas fa-cog"></i> تنظیمات
                        </a>
                        <a href="/admin/logout" class="dropdown-item">
                            <i class="fas fa-sign-out-alt"></i> خروج
                        </a>
                    </div>
                </div>
            </div>
        </header>
        
        <!-- محتوای اصلی -->
        <main class="content-wrapper">
            <!-- پیام‌های فلش -->
            <% if (typeof messages !== 'undefined') { %>
                <% if (messages.success && messages.success.length > 0) { %>
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i>
                        <%= messages.success %>
                    </div>
                <% } %>
                
                <% if (messages.error && messages.error.length > 0) { %>
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle"></i>
                        <%= messages.error %>
                    </div>
                <% } %>
                
                <% if (messages.info && messages.info.length > 0) { %>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <%= messages.info %>
                    </div>
                <% } %>
                
                <% if (messages.warning && messages.warning.length > 0) { %>
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <%= messages.warning %>
                    </div>
                <% } %>
            <% } %>
            
            <%- body %>
        </main>
    </div>
    
    <!-- اسکریپت‌ها -->
    <script src="/admin/public/js/admin.js"></script>
    
    <% if (typeof extraScripts !== 'undefined') { %>
        <%- extraScripts %>
    <% } %>
</body>
</html>
