<div class="auth-header">
    <img src="/admin/public/images/logo.png" alt="CCOIN Logo" class="auth-logo">
    <h1>بازنشانی رمز عبور</h1>
</div>
<div class="auth-box">
    <p class="auth-description">رمز عبور جدید خود را وارد کنید.</p>
    <form action="/admin/reset-password/<%= token %>" method="POST" class="auth-form">
        <div class="form-group">
            <label for="password">رمز عبور جدید</label>
            <div class="input-group">
                <span class="input-group-addon"><i class="fas fa-lock"></i></span>
                <input type="password" id="password" name="password" class="form-control" placeholder="رمز عبور جدید را وارد کنید" required>
            </div>
        </div>
        <div class="form-group">
            <label for="confirmPassword">تکرار رمز عبور</label>
            <div class="input-group">
                <span class="input-group-addon"><i class="fas fa-lock"></i></span>
                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="رمز عبور را مجدداً وارد کنید" required>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">تغییر رمز عبور</button>
        </div>
    </form>
    <div class="auth-links">
        <a href="/admin/login">بازگشت به صفحه ورود</a>
    </div>
</div>
