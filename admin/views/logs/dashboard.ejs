<%- include('../partials/header') %>

<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">مدیریت لاگ‌ها</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-left">
            <li class="breadcrumb-item"><a href="/admin">داشبورد</a></li>
            <li class="breadcrumb-item active">مدیریت لاگ‌ها</li>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <section class="content">
    <div class="container-fluid">
      <!-- کارت‌های خلاصه -->
      <div class="row">
        <!-- سیستم -->
        <div class="col-lg-3 col-6">
          <div class="small-box bg-info">
            <div class="inner">
              <h3><%= systemLogs.length %></h3>
              <p>لاگ‌های سیستم</p>
            </div>
            <div class="icon">
              <i class="fas fa-server"></i>
            </div>
            <a href="/admin/logs/system" class="small-box-footer">
              مشاهده <i class="fas fa-arrow-circle-left"></i>
            </a>
          </div>
        </div>
        
        <!-- کاربران -->
        <div class="col-lg-3 col-6">
          <div class="small-box bg-success">
            <div class="inner">
              <h3><%= userLogs.length %></h3>
              <p>لاگ‌های کاربران</p>
            </div>
            <div class="icon">
              <i class="fas fa-users"></i>
            </div>
            <a href="/admin/logs/users" class="small-box-footer">
              مشاهده <i class="fas fa-arrow-circle-left"></i>
            </a>
          </div>
        </div>
        
        <!-- تراکنش‌ها -->
        <div class="col-lg-3 col-6">
          <div class="small-box bg-warning">
            <div class="inner">
              <h3><%= transactionLogs.length %></h3>
              <p>لاگ‌های تراکنش‌ها</p>
            </div>
            <div class="icon">
              <i class="fas fa-money-bill"></i>
            </div>
            <a href="/admin/logs/transactions" class="small-box-footer">
              مشاهده <i class="fas fa-arrow-circle-left"></i>
            </a>
          </div>
        </div>
        
        <!-- بازی‌ها -->
        <div class="col-lg-3 col-6">
          <div class="small-box bg-purple">
            <div class="inner">
              <h3><%= gameLogs.length %></h3>
              <p>لاگ‌های بازی‌ها</p>
            </div>
            <div class="icon">
              <i class="fas fa-gamepad"></i>
            </div>
            <a href="/admin/logs/games" class="small-box-footer">
              مشاهده <i class="fas fa-arrow-circle-left"></i>
            </a>
          </div>
        </div>
      </div>

      <div class="row">
        <!-- ادمین -->
        <div class="col-lg-4 col-6">
          <div class="small-box bg-primary">
            <div class="inner">
              <h3><%= adminLogs.length %></h3>
              <p>لاگ‌های ادمین</p>
            </div>
            <div class="icon">
              <i class="fas fa-user-shield"></i>
            </div>
            <a href="/admin/logs/admin" class="small-box-footer">
              مشاهده <i class="fas fa-arrow-circle-left"></i>
            </a>
          </div>
        </div>
        
        <!-- هوش مصنوعی -->
        <div class="col-lg-4 col-6">
          <div class="small-box bg-teal">
            <div class="inner">
              <h3><%= aiLogs.length %></h3>
              <p>لاگ‌های هوش مصنوعی</p>
            </div>
            <div class="icon">
              <i class="fas fa-robot"></i>
            </div>
            <a href="/admin/logs/ai" class="small-box-footer">
              مشاهده <i class="fas fa-arrow-circle-left"></i>
            </a>
          </div>
        </div>
        
        <!-- خطاها -->
        <div class="col-lg-4 col-6">
          <div class="small-box bg-danger">
            <div class="inner">
              <h3><%= errorLogs.length %></h3>
              <p>لاگ‌های خطا</p>
            </div>
            <div class="icon">
              <i class="fas fa-exclamation-triangle"></i>
            </div>
            <a href="/admin/logs/errors" class="small-box-footer">
              مشاهده <i class="fas fa-arrow-circle-left"></i>
            </a>
          </div>
        </div>
      </div>

      <!-- نمودار آمار -->
      <div class="row">
        <div class="col-md-6">
          <div class="card card-dark">
            <div class="card-header">
              <h3 class="card-title">آمار لاگ‌ها در هفته گذشته</h3>
              <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                  <i class="fas fa-minus"></i>
                </button>
              </div>
            </div>
            <div class="card-body">
              <canvas id="logsChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
            </div>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="card card-dark">
            <div class="card-header">
              <h3 class="card-title">آمار خطاها در هفته گذشته</h3>
              <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                  <i class="fas fa-minus"></i>
                </button>
              </div>
            </div>
            <div class="card-body">
              <canvas id="errorsChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
            </div>
          </div>
        </div>
      </div>

      <!-- خطاهای اخیر -->
      <div class="row">
        <div class="col-md-12">
          <div class="card card-dark">
            <div class="card-header">
              <h3 class="card-title">خطاهای اخیر</h3>
              <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                  <i class="fas fa-minus"></i>
                </button>
              </div>
            </div>
            <div class="card-body p-0">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th style="width: 200px">تاریخ</th>
                    <th style="width: 150px">ماژول</th>
                    <th>پیغام خطا</th>
                    <th style="width: 150px">کاربر</th>
                    <th style="width: 100px">جزئیات</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (errorLogs.length === 0) { %>
                    <tr>
                      <td colspan="5" class="text-center">هیچ خطایی یافت نشد</td>
                    </tr>
                  <% } else { %>
                    <% errorLogs.forEach(log => { %>
                      <tr>
                        <td><%= new Date(log.timestamp).toLocaleString('fa-IR') %></td>
                        <td><%= log.module %></td>
                        <td><%= log.error %></td>
                        <td><%= log.username || 'سیستم' %></td>
                        <td>
                          <button type="button" class="btn btn-sm btn-info" data-toggle="modal" data-target="#errorModal<%= log._id %>">
                            مشاهده
                          </button>
                          
                          <!-- مودال جزئیات خطا -->
                          <div class="modal fade" id="errorModal<%= log._id %>" tabindex="-1" role="dialog" aria-labelledby="errorModalLabel<%= log._id %>" aria-hidden="true">
                            <div class="modal-dialog modal-lg" role="document">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h5 class="modal-title" id="errorModalLabel<%= log._id %>">جزئیات خطا</h5>
                                  <button type="button" class="close mr-auto ml-0" data-dismiss="modal" aria-label="بستن">
                                    <span aria-hidden="true">&times;</span>
                                  </button>
                                </div>
                                <div class="modal-body">
                                  <div class="form-group">
                                    <label>پیغام خطا:</label>
                                    <input type="text" class="form-control" value="<%= log.error %>" readonly>
                                  </div>
                                  <div class="form-group">
                                    <label>ماژول:</label>
                                    <input type="text" class="form-control" value="<%= log.module %>" readonly>
                                  </div>
                                  <div class="form-group">
                                    <label>کاربر:</label>
                                    <input type="text" class="form-control" value="<%= log.username || 'سیستم' %>" readonly>
                                  </div>
                                  <div class="form-group">
                                    <label>زمان:</label>
                                    <input type="text" class="form-control" value="<%= new Date(log.timestamp).toLocaleString('fa-IR') %>" readonly>
                                  </div>
                                  <div class="form-group">
                                    <label>اطلاعات خطا:</label>
                                    <textarea class="form-control" rows="10" readonly><%= log.stackTrace %></textarea>
                                  </div>
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary" data-dismiss="modal">بستن</button>
                                </div>
                              </div>
                            </div>
                          </div>
                        </td>
                      </tr>
                    <% }); %>
                  <% } %>
                </tbody>
              </table>
            </div>
            <div class="card-footer clearfix">
              <a href="/admin/logs/errors" class="btn btn-sm btn-secondary float-left">مشاهده همه خطاها</a>
            </div>
          </div>
        </div>
      </div>

      <!-- مدیریت لاگ‌ها -->
      <div class="row">
        <div class="col-md-12">
          <div class="card card-dark">
            <div class="card-header">
              <h3 class="card-title">مدیریت لاگ‌ها</h3>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-6">
                  <div class="info-box bg-dark">
                    <span class="info-box-icon"><i class="fas fa-cogs"></i></span>
                    <div class="info-box-content">
                      <h5 class="info-box-text">تنظیمات لاگ</h5>
                      <p class="info-box-text">تنظیم پارامترهای نگهداری و ثبت لاگ‌ها</p>
                      <a href="/admin/logs/settings" class="btn btn-sm btn-outline-light mt-2">تنظیمات</a>
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="info-box bg-danger">
                    <span class="info-box-icon"><i class="fas fa-trash-alt"></i></span>
                    <div class="info-box-content">
                      <h5 class="info-box-text">پاکسازی لاگ‌ها</h5>
                      <p class="info-box-text">پاکسازی لاگ‌های قدیمی و غیرضروری</p>
                      <div class="btn-group mt-2">
                        <form action="/admin/logs/system/clear" method="POST" style="display: inline-block;">
                          <button type="submit" class="btn btn-sm btn-outline-light mr-2">پاکسازی لاگ‌های سیستم</button>
                        </form>
                        <form action="/admin/logs/errors/clear" method="POST" style="display: inline-block;">
                          <button type="submit" class="btn btn-sm btn-outline-light">پاکسازی لاگ‌های خطا</button>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<script>
  // نمودار لاگ‌ها
  document.addEventListener('DOMContentLoaded', function() {
    // نمودار توزیع لاگ‌ها
    var logsCtx = document.getElementById('logsChart').getContext('2d');
    var logsChart = new Chart(logsCtx, {
      type: 'line',
      data: {
        labels: ['شنبه', 'یکشنبه', 'دوشنبه', 'سه‌شنبه', 'چهارشنبه', 'پنجشنبه', 'جمعه'],
        datasets: [
          {
            label: 'سیستم',
            backgroundColor: 'rgba(23, 162, 184, 0.2)',
            borderColor: 'rgba(23, 162, 184, 1)',
            pointRadius: 3,
            pointBackgroundColor: 'rgba(23, 162, 184, 1)',
            pointBorderColor: '#fff',
            pointHoverRadius: 5,
            data: [65, 59, 80, 81, 56, 55, 40]
          },
          {
            label: 'کاربران',
            backgroundColor: 'rgba(40, 167, 69, 0.2)',
            borderColor: 'rgba(40, 167, 69, 1)',
            pointRadius: 3,
            pointBackgroundColor: 'rgba(40, 167, 69, 1)',
            pointBorderColor: '#fff',
            pointHoverRadius: 5,
            data: [28, 48, 40, 19, 86, 27, 90]
          },
          {
            label: 'تراکنش‌ها',
            backgroundColor: 'rgba(255, 193, 7, 0.2)',
            borderColor: 'rgba(255, 193, 7, 1)',
            pointRadius: 3,
            pointBackgroundColor: 'rgba(255, 193, 7, 1)',
            pointBorderColor: '#fff',
            pointHoverRadius: 5,
            data: [70, 48, 61, 92, 45, 30, 50]
          },
          {
            label: 'بازی‌ها',
            backgroundColor: 'rgba(153, 102, 255, 0.2)',
            borderColor: 'rgba(153, 102, 255, 1)',
            pointRadius: 3,
            pointBackgroundColor: 'rgba(153, 102, 255, 1)',
            pointBorderColor: '#fff',
            pointHoverRadius: 5,
            data: [45, 25, 30, 35, 28, 15, 25]
          }
        ]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        legend: {
          position: 'bottom',
          labels: {
            fontFamily: 'Vazir',
            fontSize: 12
          }
        },
        scales: {
          yAxes: [{
            ticks: {
              fontFamily: 'Vazir',
              fontSize: 12,
              beginAtZero: true
            }
          }],
          xAxes: [{
            ticks: {
              fontFamily: 'Vazir',
              fontSize: 12
            }
          }]
        }
      }
    });

    // نمودار خطاها
    var errorsCtx = document.getElementById('errorsChart').getContext('2d');
    var errorsChart = new Chart(errorsCtx, {
      type: 'bar',
      data: {
        labels: ['شنبه', 'یکشنبه', 'دوشنبه', 'سه‌شنبه', 'چهارشنبه', 'پنجشنبه', 'جمعه'],
        datasets: [
          {
            label: 'خطاهای سیستم',
            backgroundColor: 'rgba(220, 53, 69, 0.8)',
            borderColor: 'rgba(220, 53, 69, 1)',
            data: [5, 3, 8, 2, 6, 4, 1]
          },
          {
            label: 'خطاهای هوش مصنوعی',
            backgroundColor: 'rgba(32, 201, 151, 0.8)',
            borderColor: 'rgba(32, 201, 151, 1)',
            data: [2, 1, 3, 0, 2, 1, 0]
          }
        ]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        legend: {
          position: 'bottom',
          labels: {
            fontFamily: 'Vazir',
            fontSize: 12
          }
        },
        scales: {
          yAxes: [{
            ticks: {
              fontFamily: 'Vazir',
              fontSize: 12,
              beginAtZero: true
            }
          }],
          xAxes: [{
            ticks: {
              fontFamily: 'Vazir',
              fontSize: 12
            }
          }]
        }
      }
    });
  });
</script>

<%- include('../partials/footer') %>